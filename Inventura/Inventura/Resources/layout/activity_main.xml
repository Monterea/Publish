<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linearLayout1" >
    <TextView
        android:text="0"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:gravity="center_horizontal"
        android:id="@+id/textViewCount" />
    
    <Button
        android:text="+"
         android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:id="@+id/buttonIncrement" />
    <Button
        android:text="++"
        android:layout_marginTop="5dp"      
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonIncrementMore"/>
    <Button
        android:text="-"
        android:background="@android:color/holo_red_dark"
        android:shadowColor="@android:color/holo_green_dark"
        
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonDecrement" />

    <Button
        android:text="RESET - posledního přidání"
        android:background="@android:color/holo_red_dark"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonDecrementLast" />
    <Button
        android:text="RESET - vše"
        android:background="@android:color/holo_red_dark"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonReset" />
    <Button
        android:text="PŘIDAT POLOŽKU"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonAddObject" />
    <Button
        android:text="PŘEPNOUT POLOŽKU"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonNextObject" />

    <Button
        android:text="ZOBRAZIT - úpravy v čase"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonViewChanges" />
    <Button
        android:text="ZOBRAZIT - všechny položky"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonViewObjectsSum" />






</LinearLayout>